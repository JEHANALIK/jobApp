<%- include('../user/Userheader') %>


  <section class="ftco-section">
    <div class="container">
            <div class="login-wrap p-3 p-md-4">
              <h3 class="mb-2">Apply For The Job</h3>
              <form action="/applicant/applyJob" method="post" class="signup-form mb-5">
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group d-flex align-items-center">
                      <label class="label" for="email">Phone</label>
                      <input name="phone" type="text" class="form-control" placeholder="" required>
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="form-group d-flex align-items-center">
                      <input name="CV" type="file" class="form-control" id="floatingFile" placeholder="FILE" required>
                      <label for="formFile" class="form-label"></label>
                    </div>
                  </div>
                <br>
                <input name="user" type="hidden" value="<%= currentUser._id %>">
                <input name="job" type="hidden" value="<%=JobId %>">
                  <div class="col-md-12">
                    <div class="form-group signup">
                      <button type="submit" class="btn btn-outline-secondary btn-md text-right">Apply Now</button>
                      
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="form-group signup">
                     
                    </div>
                  </div>
                </div>
  
              </form>
  
            </div>
          </div>
  </section>