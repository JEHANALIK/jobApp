<%- include('../user/Userheader') %>
<div class="container-xxl py-5">
    <div class="container">
        <h3 class="mb-3 d-flex justify-content-center ">My Job Offers</h3>
        <hr>
    <% jobs.forEach(function(job) { %>
        <% const UserId=String(job.UserId[0]) %>
            <% const CurrentUserId=String(currentUser._id) %>
            <!-- check if the user apply for this job or -->
                <% if( UserId == CurrentUserId ) {%>
                    <div class="job-item p-4 mb-4">
                        <div class="row g-4">
                            <div class="col-sm-12 col-md-8 d-flex align-items-center">
                                <div class="text-start ps-4">
                                    <h5 class="title-name mb-3">
                                        <%= job.title %>
                                    </h5>
                                    <span class="text-truncate me-3"><i
                                            class="fa fa-map-marker-alt text-primary me-2"></i>
                                        <%= job.location %>
                                    </span>
                                    <span class="text-truncate me-3"><i class="far fa-clock text-primary me-2"></i>
                                        <%= job.timeType %>
                                    </span>
                                    <span class="text-truncate me-0"><i
                                            class="far fa-money-bill-alt text-primary me-2"></i>
                                        <%= job.salary %>
                                    </span>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-4 d-inline-flex flex-column align-items-start align-items-md-end justify-content-center ">
                                <div class="d-flex mb-3 me-2 mr-2 ">
                                    <a class="btn apply-btn" href="/job/editJob?id=<%= job._id %>">Edit</a>
                                    <a class="btn apply-btn"href="/job/delete?id=<%=job._id%>">Delete</a> 
                                </div>
                                <small class="text-truncate">
                                    <%= job.organization%>
                                </small>
                            </div>
                        </div>
                    </div>
                    <% } %>
                        <% }) %>
                    </div>
                </div>
                <div class="d-flex mb-3 d-flex justify-content-center">
                <a class="btn btn-outline-secondary btn-md" href="/job/addJobOffers">Add New Job Offer</a>
                </div>