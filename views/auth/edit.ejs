<%- include('../user/Userheader') %>
<form method="POST" action="/auth/edit">
    <div class="card">
        <div class="card-body col-lg-9 col-md-12 col-sm-12">

            <div class="form-floating mb-3 ">
                <input name="firstName" type="text" class="form-control" id="floatingInput" placeholder="Password" value="<%= users.firstName%>" required>
                <label for="floatingPassword">First Name</label>
              </div> 

              <div class="form-floating mb-3">
                <input name="lastName" type="text" class="form-control" id="floatingInput" placeholder="Password" value="<%= users.lastName%>" required>
                <label for="floatingPassword">Last Name</label>
              </div>

            <div class="form-floating mb-3">
                <input name="emailAddress" type="email" class="form-control" id="floatingInput" placeholder="name@example.com" value="<%= users.emailAddress%>" required>
                <label for="floatingInput">Email address</label>
              </div>

              <div>
                <input type="hidden" value="<%= users._id %>"  name='id'>
                <button type="submit" class="btn btn-outline-secondary btn-md">Save</button>
                <a href="changePass" class="btn btn-secondary btn-lg " role="button" >Change Password </a>
              </div>
              

        </div>
      </div>
</form>


