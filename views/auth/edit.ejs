<%- include('../user/Userheader') %>
<section class="ftco-section">
  <div class="container">
          <div class="login-wrap p-4 p-md-4">
            <h3 class="mb-3 d-flex justify-content-center ">Create an account</h3>
            <form action="/auth/edit" method="post" class="signup-form mb-3">
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group d-flex align-items-center">
                    <label class="label" for="name">First Name</label>
                    <input name="firstName" type="text" class="form-control" placeholder="First Name" value="<%= users.firstName%>" required>
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group d-flex align-items-center">
                    <label class="label" for="name">Last Name</label>
                    <input name="lastName" type="text" class="form-control" placeholder="last Name" value="<%= users.lastName%>" required>
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group d-flex align-items-center">
                    <label class="label" for="email">Email Address</label>
                    <input name="emailAddress" type="text" class="form-control" placeholder="johndoe@email.com" value="<%= users.emailAddress%>" required>
                  </div>
                </div>
              
              <br>
                <div class="col-md-12">
                  <div class="form-group signup ">
                    <button type="submit" class="btn btn-outline-secondary btn-md">Save</button>
                  </div>
                </div>
              </div>
              <input type="hidden" value="<%= users._id %>"  name='id'>
            </form>
            <div class="w-100 text-center">
              <br>
          <p class="mt-3">Change Password?<a id="signin" href="changePass">Change Password</a></p>
            </div>
          </div>
        </div>
</section>





