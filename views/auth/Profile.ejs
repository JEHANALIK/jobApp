<%- include('../user/Userheader') %>
    <section class="ftco-section">
      <div class="container">
              <div class="login-wrap p-4 p-md-4">
                <h3 class="mb-3"><%= user.firstName%>'s Profile</h3>
                <form action="edit" method="post" class="signup-form mb-3">
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group d-flex align-items-center">
                        <label class="label" for="name">First Name</label>
                        <label class="label" for="name"><%= user.firstName %></label>
                      </div>
                    </div>
                    <div class="col-md-12">
                      <div class="form-group d-flex align-items-center">
                        <label class="label" for="name">Last Name</label>
                        <label class="label" for="name"><%= user.lastName %></label>
                      </div>
                    </div>
                    <div class="col-md-12">
                      <div class="form-group d-flex align-items-center">
                        <label class="label" for="email">Email Address</label>
                        <label class="label" for="email"><%=user.emailAddress %></label>
                      </div>
                    </div>
                  <br>
                    <div class="col-md-12 mb-4">
                      <div class="form-group signup  ">
                        
                          <a href="edit" class="btn apply-btn " role="button" >Edit Profile </a>
                     
                      </div>
                    </div>
                  </div>
    
                </form>
              </div>
            </div>
    </section>




